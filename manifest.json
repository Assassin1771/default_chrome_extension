{
  "manifest_version": 3,
  "name": "Scroll Extension",
  "version": "1.0.0",
  "description": "A Chrome extension for scroll management",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["activeTab", "scripting", "tabs"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"]
    }
  ]
}
